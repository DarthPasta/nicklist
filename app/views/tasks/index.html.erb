    <!-- Header -->
    <header class="intro-header" ontouchstart="this.classList.toggle('hover');">
    	<% if signed_in? %><div class="flipper"><% end %>

    	<!-- Front view -->
    		<div class="front-view">
        		<div class="container">
            	<div class="intro-message">

	            <% if signed_in? %>
                    <%= image_tag current_user.avatar_url, class: "avatar-container" if current_user.avatar? %>
	                <h1><%= current_user.username %>'s List</h1>
	            <% else %>
	            	<h1>Please Sign In to Proceed</h1>
	            <% end %>


	                <h3>Manage your tasks with no effort</h3>
	                <hr class="intro-divider">
	                    </li>
	                </ul>
	        	</div>
	        	</div>
        	</div>

        	<% if signed_in? %>
	        <div class="back-view">
	        <div class="new-task-form">	
	        <h1 class="task-head">Welcome</h1>

	      
				<!-- form to create new task -->
				<%= form_for @task, html: {autocomplete: "off" }, remote: true, action: "post", controller: "tasks" do |t| %>

					<%= t.text_field :description, input_html: { :class => "createtask" }, placeholder: "Add a task.." %>

                    <%= button_tag(type: "submit", class: "btn btn-success") do %><i class="glyphicon glyphicon-plus"></i>
                    <% end %>

				<% end %>

			</div>

            <div class="task-list-container">
                <div class="append-task"></div>
				<div class="task-list">
				<!-- display the list of tasks -->
				<% @tasks.each do |task| %>

                            
                    <div class="task-row">
                            <div class="task-option dropdown">
                                <span><button type="button" class="btn btn-primary btn-sml">
                                <span class="glyphicon glyphicon-wrench" aria-hidden="true"></span>
                            </button></span>

                            <div class="dropdown-content">
                                <%= link_to 'Delete', delete_task_path(task.id), data: {:confirm => 'Are you sure?'} , :method => :delete, :action => :destroy %>
                                 <!--  <%= link_to 'Edit', edit_task_path(task.id) %> -->
                            </div>

                    </div>

				<ul class="task-items" id="test">

                    <li><%= task.description %></li>

					<li>Created at: <%= task.created_at.to_date %></li>
				</ul>   
                </div>  
				<% end %> 

                </div>
			</div>
	        </div>
        
        </div>
        <% end %>

